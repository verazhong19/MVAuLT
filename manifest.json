{
    "manifest_version": 3,
    "name": "MVAuLT",
    "version": "1.0",
    "description": "Narrative Alt Text for Music Videos",
    "permissions": ["storage"],
    "host_permissions": ["https://www.youtube.com/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }